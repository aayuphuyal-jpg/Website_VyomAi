# Environment Configuration for VyomAi

# Application Environment
NODE_ENV=production
PORT=5000

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Admin Credentials (CHANGE THESE IN PRODUCTION!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password_here_min_12_characters

# Session Security
SESSION_SECRET=generate_a_random_secure_string_here

# Database Configuration (for future PostgreSQL migration)
DATABASE_URL=postgresql://user:password@localhost:5432/vyomai

# Email Service Configuration
# Using Hostinger Email Hosting (vyomai.cloud domain)
# For future Google Cloud Platform integration, use: smtp.gmail.com with OAuth
SENDGRID_API_KEY=your_sendgrid_api_key_here
SMTP_HOST=mail.vyomai.cloud
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=shekhar@vyomai.cloud
SMTP_PASSWORD=your_hostinger_email_password_here
SMTP_FROM=shekhar@vyomai.cloud
SMTP_FROM_NAME=VyomAi Team

# Fonepay Payment Gateway Configuration
FONEPAY_MERCHANT_CODE=your_fonepay_merchant_code_here
FONEPAY_SECRET_KEY=your_fonepay_secret_key_here
FONEPAY_API_URL=https://fonepay.com/api/

# Optional: Analytics and Monitoring
SENTRY_DSN=your_sentry_dsn_here
