{
    "version": 2,
    "builds": [
        {
            "src": "api/index.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/index.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.ts"
        }
    ],
    "crons": [
        {
            "path": "/api/admin/social-media/sync-all",
            "schedule": "0 * * * *"
        }
    ]
}