{
    "version": 2,
    "functions": {
        "api/index.ts": {
            "memory": 1024,
            "includeFiles": ["dist/public/**", "dist/server.js"]
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.ts"
        }
    ],
    "crons": [
        {
            "path": "/api/admin/social-media/sync-all",
            "schedule": "0 0 * * *"
        }
    ]
}